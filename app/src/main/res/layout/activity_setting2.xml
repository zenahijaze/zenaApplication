<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity2">

    <Button
        android:id="@+id/btnsignout"
        android:layout_width="136dp"
        android:layout_height="59dp"
        android:text="signout"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="130dp" />

    <ToggleButton
        android:id="@+id/TbtnSignin"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:text="ToggleButton"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="22dp" />

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:text="StaySignIn"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="29dp" />

    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="333dp"
        android:layout_height="197dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="232dp">

        <RadioButton
            android:id="@+id/rbtnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            tools:text="Delete" />

        <RadioButton
            android:id="@+id/rbtnCross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            tools:text="Crossline" />

        <RadioButton
            android:id="@+id/rbtnMove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MoveToEnd" />
    </RadioGroup>

    <Button
        android:id="@+id/btnClearhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clearhistory"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="531dp" />

    <Switch
        android:id="@+id/swKeepHistory"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:text="keephistory"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="449dp" />

</androidx.constraintlayout.widget.ConstraintLayout>